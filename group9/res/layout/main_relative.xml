<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#FFFFFF"
	tools:context=".BlueTooth" 
	>

	<RelativeLayout android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
		
		<TextView
		    android:id="@+id/TextView01"
		    android:layout_width="100dp"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:padding="10dp"
		    android:text="BlueTooth Switch"
		    android:textColor="#333333"
		    android:textStyle="bold" >

		</TextView>
		
		<ToggleButton
		    android:id="@+id/tbtnSwitch"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBottom="@id/TextView01"
		    android:layout_alignParentTop="true"
		    android:layout_toRightOf="@id/TextView01"
		    android:text="BlueTooth Switch"
		    android:textOff="OFF"
		    android:textOn="ON" >

		</ToggleButton>
		
		
		<Button 
	    	android:layout_height="wrap_content" 
	    	android:text="Enable BlueTooth Discoverable" 
	    	android:id="@+id/btnDis" 
	    	android:layout_width="160dp"
	    	android:layout_toRightOf="@id/tbtnSwitch"
	    	android:layout_alignBottom="@id/TextView01"
	    	
	    	
	    	
	    	android:layout_alignParentRight="true"
	    	>
		</Button>
		
		
		<Button 
		    android:layout_height="wrap_content" 
		    android:id="@+id/btnSearch"
			android:text="Search Device" 
			android:layout_below="@id/TextView01"
			android:layout_alignRight="@id/tbtnSwitch"
			android:layout_alignParentLeft="true"
			android:layout_width="160dp"
			>
		    
		</Button>
		
		<Button 
		    android:layout_height="wrap_content" 
		    android:id="@+id/btnExit"
			android:text="Exit" 
			android:layout_width="160dp"
			android:layout_alignLeft="@id/btnDis"
			android:layout_alignParentRight="true"
			android:layout_alignBottom="@id/btnSearch"
			>
		</Button>
	</RelativeLayout>
	
	<ListView
	    android:id="@+id/lvDevices"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@id/LinearLayout01"
	     >

	</ListView>
	
</RelativeLayout>
